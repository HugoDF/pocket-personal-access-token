{
  "name": "pocket-personal-access-token",
  "private": true,
  "version": "1.0.0",
  "description": "A lightweight OAuth integration with the Pocket API",
  "main": "bin/start.js",
  "scripts": {
    "lint": "xo",
    "format": "xo --fix",
    "prestart": "yarn build",
    "start": "node ./bin/start.js",
    "predev": "yarn tw",
    "dev": "nodemon ./bin/start.js",
    "tw": "tailwind build src/styles/app.css -o public/app.css ",
    "purge": "purgecss --css ./public/app.css -o ./public --content src/views/**/*.html",
    "build": "yarn tw && yarn purge"
  },
  "keywords": [
    "express",
    "pocket"
  ],
  "author": "Hugo Di Francesco",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.18.0",
    "client-sessions": "^0.8.0",
    "express": "^4.17.3",
    "helmet": "^3.16.0",
    "morgan": "^1.9.1",
    "nunjucks": "^3.2.0",
    "purgecss": "^1.3.0"
  },
  "devDependencies": {
    "nodemon": "^1.18.11",
    "tailwindcss": "^1.0",
    "xo": "^0.24.0"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "camelcase": 0
    }
  },
  "nodemonConfig": {
    "ext": "js,html"
  }
}
